{
  // environments
  "browser": true,
  "jquery": true,
  "node": true,

  // enforcing options
  "curly": true,    // require curly braces around blocks
  "eqeqeq": true,   // prohibit use of == and != operators
  "forin": true,    // require all "for in" loops to filter object's items
  "freeze": true,   // prohibit overwriting prototypes of native objects
  "latedef": true,  // prohibit use of variable before it is defined
  "newcap": true,   // require constructor function names to be capitalized
  "nonbsp": true,   // prohibit non-breaking whitespace characters
  "nonew": true,    // prohibit use of constructor functions for side effects
  "quotmark": "single", // prohibit double quotes
  "undef": true,    // prohibit the use of explicitly undeclared variables
  "unused": true    // warn when a variable or parameter is unused
}
